@model List<GetBookDto>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Author</th>
            <th>Description</th>
            <th>Publish Date</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Author</td>
                <td>@item.Description</td>
                <td>@item.PublishDate.ToString("dd MMM yyyy")</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a asp-controller="Book" asp-action="UpdateBook" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>

                    <form asp-controller="Book" asp-action="DeleteBook" asp-route-id="@item.Id" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

