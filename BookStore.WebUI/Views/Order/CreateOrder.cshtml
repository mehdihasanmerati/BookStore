@model CreateOrderViewModel

<h2 class="form-title">Create Order</h2>

<form asp-action="CreateOrder" method="post" class="p-4 border rounded shadow-sm bg-light">
    <div class="form-group mb-3">
        <label asp-for="BookId" class="form-label">Select Book</label>
        <select asp-for="BookId" class="form-control shadow-sm" asp-items="Model.BookList"></select>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="OrderDate" class="form-label fw-bold"></label>
        <input asp-for="OrderDate" type="date" class="form-control shadow-sm" />
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price" class="form-label fw-bold"></label>
        <input asp-for="Price" type="number" step="0.01" class="form-control shadow-sm" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="CustomerEmail" class="form-label fw-bold"></label>
        <input asp-for="CustomerEmail" type="email" class="form-control shadow-sm" />
        <span asp-validation-for="CustomerEmail" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary shadow">Save</button>
    <a asp-controller="Order" asp-action="IndexOrder" class="btn-secondary shadow-sm">Return to OrderList</a>
</form>