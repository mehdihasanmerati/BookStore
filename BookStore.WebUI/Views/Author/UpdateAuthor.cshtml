@model UpdateAuthorViewModel

<h2 class="form-title">Update Author</h2>

<form asp-action="UpdateAuthor" method="post" class="p-4 border rounded shadow-sm bg-light">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-3">
        <label asp-for="FirstName" class="form-label fw-bold"></label>
        <input asp-for="FirstName" type="text" class="form-control shadow-sm" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="LastName" class="form-label fw-bold"></label>
        <input asp-for="LastName" type="text" class="form-control shadow-sm" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary w-100 rounded-pill mt-3" value="Update" />
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}